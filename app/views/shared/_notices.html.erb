<div id="notices" data-controller="notice">
  <% flash.each do |type, messages| %>
    <% if messages.is_a?(Array) %>
      <% messages.each do |message| %>
        <div class="absolute right-10 top-10" data-notice-target="notice">
          <div class="flex justify-center max-w-100 mt-2 text-sm rounded-lg p-4 <%= type.to_sym == :errors ? 'bg-red-100 border border-red-200 text-red-800' : 'bg-teal-100 border border-teal-200 text-teal-800' %>" role="alert">
            <span class="font-bold"><%= message %></span>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="absolute right-10 top-10" data-notice-target="notice">
        <div class="flex justify-center max-w-100 mt-2 text-sm rounded-lg p-4 <%= type.to_sym == :errors ? 'bg-red-100 border border-red-200 text-red-800' : 'bg-teal-100 border border-teal-200 text-teal-800' %>" role="alert">
          <span class="font-bold"><%= messages %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>